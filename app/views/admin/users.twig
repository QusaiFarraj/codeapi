{% extends 'templates/default.twig' %}

{% block title %} All users {% endblock %}

{% block content %}

    <h2> All Users</h2>

    {% if users is empty %}
        <p>No Registered users.</p>
    {% else %}
        {% for user in users %}
            <div class="user">
                <a href="{{ path_for('user.profile', {username: user.username}) }}">{{ user.username }}</a>
                {% if user.getFullName() %}
                    ({{ user.getFullName() }})
                {% endif %}
                {% if user.isAdmin() %}
                    (Admin)
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}

{% endblock %}